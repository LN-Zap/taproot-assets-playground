#!/usr/bin/env bash

tmpfile=$(mktemp)
docker exec taproot-assets-playground-litd-1 lncli \
    --network=regtest \
    --rpcserver=localhost:10009 \
    --tlscertpath=/root/.lnd/tls.cert \
    "${@:1}" > $tmpfile 2>&1
status=$?
output=$(< $tmpfile)
rm $tmpfile

if [ $status -ne 0 ]; then
    echo "$output"
    exit 1
else
    echo "$output"
fi